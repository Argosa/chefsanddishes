@{
    List<Chef> LocalList = ViewBag.AllChefs;
}

@model Dish

<form asp-action="CreateDish" asp-controller="Home" method="POST">
    <div class="form-group text-red">
        <span asp-validation-for="DishName"></span>
        <span asp-validation-for="Tastiness"></span>
        <span asp-validation-for="Calories"></span>
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="DishName"></label>
        <input class="form-control" asp-for="DishName">
    </div>
    <div class="form-group">
        <label>Chef</label>
        <select class="form-control" asp-for="ChefID">
            @foreach (var chef in LocalList)
            {
                <option value="@chef.ChefID">@chef.FirstName @chef.LastName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Tastiness"></label>
        <select class="form-control" asp-for="Tastiness">
            @for(int i =1; i < 6; i++) {
                <option value="@i">@i</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Calories"></label>
        <input class="form-control" type="number" asp-for="Calories">
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea class="form-control" asp-for="Description"></textarea>
    </div>
    <button class="btn btn-primary">Add Dish</button>
</form>